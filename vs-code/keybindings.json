[
  // Editor actions
  // --------------------------------------------------------------
  { "key": "alt+r", "command": "workbench.action.openRecent" }, // to open in new window hold ctrl and click enter

  // Vim like navigation hotkeys
  // ------------
  { "key": "ctrl+h", "command": "workbench.action.navigateLeft" },
  { "key": "ctrl+l", "command": "workbench.action.navigateRight" },
  { "key": "ctrl+k", "command": "workbench.action.navigateUp" },
  { "key": "ctrl+j", "command": "workbench.action.navigateDown" },

  // Quick Open
  // ------------
  { "key": "ctrl+j", "command": "workbench.action.quickOpenNavigateNext", "when": "inQuickOpen" },
  { "key": "ctrl+k", "command": "workbench.action.quickOpenNavigatePrevious", "when": "inQuickOpen" },

  // File Explorer
  // ------------
  { "key": "ctrl+n", "command": "workbench.view.explorer" },
  { "key": "alt+l", "command": "workbench.action.toggleSidebarVisibility" },
  { "key": "a", "command": "explorer.newFile", "when": "explorerViewletFocus && !inputFocus" },
  { "key": "d", "command": "deleteFile", "when": "explorerViewletFocus && !inputFocus" },
  { "key": "enter", "command": "multiCommand.openAndFocus", "when": "explorerViewletFocus" },
  { "key": "r", "command": "renameFile", "when": "explorerViewletFocus && !inputFocus" },
  { "key": "x", "command": "filesExplorer.cut", "when": "filesExplorerFocus && !inputFocus" },
  { "key": "c", "command": "filesExplorer.copy", "when": "filesExplorerFocus && !inputFocus" },
  { "key": "p", "command": "filesExplorer.paste", "when": "filesExplorerFocus && !inputFocus" },

  // AI
  // ------------
  { "key": "alt+h", "command": "workbench.action.chat.toggle" },
  { "key": "ctrl+l", "command": "editor.action.inlineSuggest.acceptNextWord", "when": "inlineSuggestionVisible && !editorReadonly" },
  { "key": "ctrl+h", "command": "editor.action.inlineSuggest.showNext", "when": "inlineSuggestionVisible && !editorReadonly" },
  

  // Terminal
  // ------------
  { "key": "ctrl+shift+j", "command": "workbench.action.terminal.focus" },
  { "key": "ctrl+shift+k", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },

  // Text editing
  // ------------
  { "key": "alt+backspace", "command": "deleteWordLeft", "when": "textInputFocus" },

  // Code folding
  // ------------
  { "key": "ctrl+[", "command": "editor.fold", "when": "editorTextFocus" },
  { "key": "ctrl+]", "command": "editor.unfold", "when": "editorTextFocus" },
  { "key": "ctrl+shift+[", "command": "editor.foldAll", "when": "editorTextFocus" },
  { "key": "ctrl+shift+]", "command": "editor.unfoldAll", "when": "editorTextFocus" },

  // ------------------------
  // Plugins ----------------
  // ------------------------

  // SQL Server
  // ------------
  { "key": "ctrl+enter", "command": "mssql.runQuery", "when": "editorTextFocus && editorLangId == 'sql'" },

  // Suggestions
  // ------------
  { "key": "ctrl+shift+l", "command": "editor.action.inlineSuggest.acceptNextWord", },

  // File Explorer filter hotkeys
  // ------------
  { "key": "cmd+alt+f", "command": "multiCommand.focusExplorerAndFilter", "when": "workspaceFolderCount > 0" },
  { "key": "cmd+alt+t", "command": "multiCommand.toggleFilterView", "when": "workspaceFolderCount > 0" },
  { "key": "cmd+alt+s", "command": "multiCommand.pasteToFilter", "when": "workspaceFolderCount > 0" },

  // Tasks
  // ------------
  { "key": "alt+b", "command": "workbench.action.tasks.runTask", "args": "Build Solution" },
  { "key": "alt+t", "command": "workbench.action.tasks.runTask", "args": "Integration Tests: Run All" },
  { "key": "alt+m", "command": "workbench.action.tasks.runTask", "args": "Init and Apply Migrations" },

  // Search actions
  // --------------------------------------------------------------
  { "key": "alt+j", "command": "search.action.focusNextSearchResult", "when": "hasSearchResult" },
  { "key": "alt+k", "command": "search.action.focusPreviousSearchResult", "when": "hasSearchResult" },

  // Pin
  { "key": "alt+p", "command": "workbench.action.pinEditor", "when": "!activeEditorIsPinned" },
  { "key": "alt+p", "command": "workbench.action.unpinEditor", "when": "activeEditorIsPinned" },

  // Open view
  { "key": "alt+g", "command": "workbench.view.scm" },
  { "key": "alt+s", "command": "workbench.view.explorer" },
  { "key": "alt+f", "command": "workbench.view.search" },

  // Shift+Ctrl+m to open problems

  // Toggle maximize copilot/chat area
  { "key": "alt+;", "command": "workbench.action.maximizeAuxiliaryBar", "when": "!auxiliaryBarMaximized" },
  { "key": "alt+;", "command": "workbench.action.restoreAuxiliaryBar", "when": "auxiliaryBarMaximized"},
  

]

/*
Copilot:
Open/Focus Chat view - 	Ctrl+Alt+I or Ctrl+Cmd+I
Start inline chat	- Ctrl+I	Cmd+I
Open Quick Chat	- Ctrl+Shift+Alt+L
*/
