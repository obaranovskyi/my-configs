{
  "workbench.colorTheme": "Atom One Dark",
  "editor.renderWhitespace": "all",
  "editor.fontFamily": "Monaco",
  "editor.lineHeight": 1.3,
  "editor.fontSize": 14,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "explorer.confirmDelete": false,
  "editor.rulers": [140],
  "window.zoomLevel": 1,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "workbench.sideBar.location": "right",
  "gitlens.currentLine.enabled": false,
  "typescript.preferences.quoteStyle": "single",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.iconTheme": "vscode-icons",
  "vim.leader": "<Space>",
  "vim.easymotion": true,
  "vim.insertModeKeyBindings": [
    { "before": ["j", "l"], "after": ["<Right>"] },
    { "before": ["j", "h"], "after": ["<Left>"] },
    { "before": ["j", "L"], "after": ["<Esc>", "A"] },
    { "before": ["j", "H"], "after": ["<Esc>", "I"] },
    { "before": ["j", "k"], "after": ["<Esc>"] },
    { "before": ["j", "U"], "after": ["<Esc>", "g", "U", "i", "w", "e", "a"] },
  ],
  "vim.normalModeKeyBindings": [
    { "before": ["s"], "after": ["<space>", "<space>", "s"] },
    { "before": ["leader", "="], "after": ["g", "a", "="] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<S-l>"], "commands": [":tabn"] },
    { "before": ["<S-h>"], "commands": [":tabp"] },
    { "before": ["g", "n"], "commands": [":tabn"] },
    { "before": ["g", "p"], "commands": [":tabp"] },
    { "before": ["g", "q"], "commands": [":tabclose"] },
    { "before": ["g", "o"], "commands": [":tabonly"] },
    { "before": ["g", "l"], "commands": [":tablast"] },
    { "before": ["g", "f"], "commands": [":tabfirst"] },
    { "before": ["<Leader>", ";"], "after": ["g", "d"] },
    { "before": ["g", "a"], "after": ["g", "g", "V", "G", "$"] },
    { "before": ["leader", "g"], "commands": ["workbench.action.terminal.searchWorkspace"]},
    {
      "before": ["leader", "r"],
      "commands": ["editor.action.rename"],
      "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.quickOpenPreviousEditor"]
    },
    {
      "before": ["<leader>", "\\"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "n"],
      "commands": ["revealInExplorer"]
    }
    // commands to implement:
    // cmd+k+cmd+i - show code tip
    // use gh to show the info (like on the hover)
  ],
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#ffffff",
    "statusBar.background": "#B48EAD",
    "statusBar.noFolderBackground": "#B48EAD",
    "statusBar.debuggingBackground": "#B48EAD",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {},
    "FIXME": {}
  },
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "green",
    "type": "none"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "code-runner.executorMap": {
    "cpp": "g++ $fullFileName && ./a.out"
  },
  "editor.tokenColorCustomizations": {
    "comments": "#8e959b"
  },
  "workbench.editor.tabSizing": "shrink",
  "todo-tree.tree.showScanModeButton": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "debug.onTaskErrors": "debugAnyway",
  "terminal.integrated.shell.osx": "/bin/bash",
  "gitlens.gitCommands.closeOnFocusOut": true,
  "editor.lineNumbers": "on",
  "vim.surround": true,
  "html.autoClosingTags": false,
  // "vim.enableNeovim": true,
  // "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8FBCBB", "#434C5E"],
  "vim.statusBarColors.insert": "#BF616A",
  "vim.statusBarColors.visual": "#B48EAD",
  "vim.statusBarColors.visualline": "#B48EAD",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#D08770",
  "vim.statusBarColors.commandlineinprogress": "#007ACC",
  "vim.statusBarColors.searchinprogressmode": "#007ACC",
  "vim.statusBarColors.easymotionmode": "#007ACC",
  "vim.statusBarColors.easymotioninputmode": "#007ACC",
  "vim.statusBarColors.surroundinputmode": "#007ACC",
  "javascript.updateImportsOnFileMove.enabled": "never",
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off"
}
